  config=release
endif
export config

PROJECTS := GWEN-Static Renderer-OpenGL_TruetypeFont

.PHONY: all clean help $(PROJECTS)

all: $(PROJECTS)

GWEN-Static: 
	@echo "==== Building GWEN-Static ($(config)) ===="
	@${MAKE} --no-print-directory -C . -f GWEN-Static.make

Renderer-OpenGL_TruetypeFont: 
	@echo "==== Building Renderer-OpenGL_TruetypeFont ($(config)) ===="
	@${MAKE} --no-print-directory -C . -f Renderer-OpenGL_TruetypeFont.make

clean:
	@${MAKE} --no-print-directory -C . -f GWEN-Static.make clean
	@${MAKE} --no-print-directory -C . -f Renderer-OpenGL_TruetypeFont.make clean

